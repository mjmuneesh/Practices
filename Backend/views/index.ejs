<body>
  <div class="container mt-5">
    <div class="row">
      <div class="col-sm-12 col-md-6" style="background-color: rgb(160, 121, 197)";>
        <h1 class="text-white text-center">Register Here!</h1>
    <br>
    <form action="/register" method="post">
      <div class="mb-3">
        <label for="exampleInputEmail1" class="form-label">Username</label>
        <input name="username" type="text" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp">
        <span style="color: rgb(8, 68, 63);" class="form-text">We'll never share your details with anyone else.</span>
      </div>
      <div class="mb-3">
        <label for="exampleInputPassword1" class="form-label">Password</label>
        <input name="password" type="password" class="form-control" id="exampleInputPassword1">
      </div>
      <div class="mb-3">
        <label for="exampleInputEmail2" class="form-label">Secret</label>
        <input name="secret" type="text" class="form-control" id="exampleInputEmail2" aria-describedby="emailHelp">
      </div>
      <button  type="submit" class="btn btn-primary mb-3 ">Submit</button>
    </form>

      </div>
      <div class="col-sm-12 col-md-6"  style="background-color: rgb(111, 185, 208)">
        <h1 class="text-white text-center">Login Here!</h1>
    <br>
    <form action="/login" method="post">
      <div class="mb-3">
        <label for="exampleInputEmail3" class="form-label">Username</label>
        <input name="username" type="text" class="form-control" id="exampleInputEmail3" aria-describedby="emailHelp">
        <span style="color: rgb(92, 2, 128);" class="form-text">We'll never share your details with anyone else.</span>
      </div>
      <div class="mb-3">
        <label for="exampleInputPassword4" class="form-label">Password</label>
        <input name="password" type="password" class="form-control" id="exampleInputPassword4">
      </div>
     
      <button type="submit" class="btn btn-primary">Login</button>
    </form>

      </div>
    </div>
   
    
  </div>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>
</html>
